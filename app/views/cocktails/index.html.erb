<h1>Cocktail List</h1>
<ul class="list-unstyled mt-4">
<% @cocktails.each do |cocktail| %>
  <li class = "mb-3">🍹<%= cocktail.name %> <%= link_to "See details", cocktail_path(cocktail), class: "btn btn-light btn-sm pull-right"%> </li>
<% end %>
</ul>

<%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-light btn-sm"%>
